<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.kdmanalytics.toif</groupId>
    <artifactId>sites</artifactId>
    <version>1.16.0</version>
    </parent>

    <groupId>com.kdmanalytics.toif.compile</groupId>
    <artifactId>com.kdmanalytics.toif.repository</artifactId>

  <packaging>eclipse-repository</packaging>

  <name>TOIF Repository</name>

  <properties>
    <toif-archive-name>toif-${project.version}</toif-archive-name>
      <distribution.prefix>${project.build.directory}/products/com.kdmanalytics.toif</distribution.prefix>
  </properties>

  <profiles>
    <profile>
      <id>jenkins</id>
      <activation>
        <property>
          <name>env.BUILD_NUMBER</name>
        </property>
      </activation>
      <properties>
        <toif-archive-name>toif-${project.version}-${env.BUILD_NUMBER}</toif-archive-name>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-p2-repository-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <createArtifactRepository>true</createArtifactRepository>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-p2-director-plugin</artifactId>
        <version>${tycho-version}</version>
        <executions>
          <execution>
            <id>materialize-products</id>
            <goals>
              <goal>materialize-products</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <products>
            <product>
              <id>com.kdmanalytics.toif</id>
              <attachId>toif</attachId>
            </product>
          </products>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>rename-windows-executables</id>
            <phase>package</phase>
            <configuration>
              <target>
                <delete
                  file="${distribution.prefix}/win32/win32/x86_64/toif.exe" />
                <move
                  file="${distribution.prefix}/win32/win32/x86_64/eclipsec.exe"
                  tofile="${distribution.prefix}/win32/win32/x86_64/toif.exe" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>

          <execution>
            <id>rename-updatesite-zip</id>
            <phase>package</phase>
            <configuration>
              <target>
                <move
                  file="${project.build.directory}/com.kdmanalytics.toif.repository-${project.version}.zip"
                  tofile="${project.build.directory}/TOIF_View_Updatesite_${project.version}.zip" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <finalName>kdmanalytics</finalName>
          <descriptors>
            <descriptor>assemblies/toif-linux-x86_64.xml</descriptor>
            <descriptor>assemblies/toif-windows-x86_64.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
